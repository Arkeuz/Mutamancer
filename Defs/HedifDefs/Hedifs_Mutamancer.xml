<?xml version="1.0" encoding="utf-8" ?>

<HediffDef >
    <defName>TM_EnchantedAuraHD</defName>
	<hediffClass>HediffWithComps</hediffClass>
	<label>Enchanted Aura</label>
	<description>An enchanted aspect surrounds the pawn enhancing qualities considered for beauty, endearment, and attraction.</description>
    <defaultLabelColor>(0.6,0.8,1)</defaultLabelColor>
    <scenarioCanAdd>false</scenarioCanAdd>
	<makesSickThought>false</makesSickThought>
	<tendable>false</tendable>
    <makesAlert>false</makesAlert>
	<minSeverity>0.001</minSeverity>
	<maxSeverity>4.0</maxSeverity>
	<isBad>false</isBad>
	<initialSeverity>.5</initialSeverity>
	<stages>
      <li>
        <label>I</label>
        <minSeverity>0.001</minSeverity>
		<becomeVisible>true</becomeVisible>
		<statOffsets>
            <MutagenSensitivity>-0.75</MutagenSensitivity>
            <TransformationSensitivity>-0.75</TransformationSensitivity>
            <MutationHaltChance>0.5</MutationHaltChance>
            <ToxicSensitivity>-.25</ToxicSensitivity>
		</statOffsets>
      </li>
	  <li>
        <label>II</label>
        <minSeverity>1</minSeverity>
		<becomeVisible>true</becomeVisible>
		<statOffsets>
            <MutagenSensitivity>-1.5</MutagenSensitivity>
            <TransformationSensitivity>-1.5</TransformationSensitivity>
            <MutationHaltChance>1</MutationHaltChance>
            <ToxicSensitivity>-.50</ToxicSensitivity>
		</statOffsets>
      </li>
	</stages>
  </HediffDef>